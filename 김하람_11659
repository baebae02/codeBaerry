#include <iostream>

using namespace std;

int N, M;
int arr[100001];

int main() {
    ios_base::sync_with_stdio(false);
	cin.tie(0);

    cin >> N >> M;

    for(int i = 0; i < N; i++)
        cin >> arr[i];
    
    for(int i = 1; i <=N; i++)
        arr[i] += arr[i-1];

    for(int i = 0; i < M; i++) {
        int x1, x2;
        cin >> x1 >> x2;

        cout << arr[x2-1]-arr[x1-2] << "\n";
    }
}
